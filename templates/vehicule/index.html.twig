{# templates/vehicule/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des Véhicules{% endblock %}

{% block body %}
<h1>Liste des Véhicules</h1>

<table>
    <thead>
        <tr>
            <th>Titre</th>
            <th>Marque</th>
            <th>Modèle</th>
            <th>Prix Journalier</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for vehicule in vehicules %}
        <tr>
            <td>{{ vehicule.GetTitre }}</td>
            <td>{{ vehicule.GetMarque }}</td>
            <td>{{ vehicule.GetModele }}</td>
            <td>{{ vehicule.prixJournalier }}</td>
            <td>
                <a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}">Modifier</a>
                <a href="{{ path('vehicule_delete', {'id': vehicule.id}) }}">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('vehicule_create') }}">Créer un nouveau véhicule</a>
{% endblock %}
